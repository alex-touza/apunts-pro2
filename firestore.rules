rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Usuaris:
    // - Create: Només si l'usuari està autenticat I proporciona un codi d'invitació vàlid (que existeixi a la col·lecció 'invites')
    // - Read/Update: Només el propi usuari
    match /users/{userId} {
      allow read, update: if request.auth != null && request.auth.uid == userId;
      allow create: if request.auth != null && request.auth.uid == userId
                    && exists(/databases/$(database)/documents/invites/$(request.resource.data.inviteCode));
    }

    // Invites:
    // - Tancat al públic. Només accessible internament per la regla 'exists' de dalt.
    // - Cal crear manualment els documents aquí (el ID del document ha de ser el codi).
    match /invites/{code} {
      allow read, write: if false;
    }

    // Solucions:
    // - Lectura: Pública (tothom pot veure)
    // - Escriptura: Només autenticats (create, update)
    match /solutions/{solutionId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Dades generals (fallback)
    match /{document=**} {
      allow read: if request.auth != null;
      allow write: if false; 
    }
  }
}
